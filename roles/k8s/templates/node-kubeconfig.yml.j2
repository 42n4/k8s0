apiVersion: v1
kind: Config
clusters:
- name: local
  cluster:
    certificate-authority: {{ kube_config_dir }}/cert/ca.pem
users:
- name: kubelet
  user:
    client-certificate: {{ kube_config_dir }}/cert/client.pem
    client-key: {{ kube_config_dir }}/cert/client.key
contexts:
- context:
    cluster: local
    user: kubelet
  name: kubelet-local
current-context: kubelet-local
